<div class="col-8 mt-4">
  <div class="card text-center shadow mb-5 bg-white rounded" id="<%= dom_id category %>">
    <div class="card-body">
      <h5 class="card-title">
        <%= link_to category.name, category_path(category), class: "text-success" %>
      </h5>
    </div>
    <div class="card-footer text-muted">
      <small>
        Created <%= time_ago_in_words(category.created_at) %> ago, 
        Updated <%= time_ago_in_words(category.updated_at) %> ago
      </small>
    </div>
  </div>
</div>

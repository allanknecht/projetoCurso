<%= render 'shared/errors', obj: @category %> <%= form_with(model: @category,
        class: "shadow p-3 mb-3 bg-info bg-gradient rounded") do |form| %>
        <div class="row justify-content-center">
          <div class="col-10">
            <div class="form-group row mt-2">
              <%= form.label :name, "Category name", class: "col-3 col-form-label text-light"
              %>
              <div class="col-9">
                <%= form.text_field :name, class: "form-control shadow rounded", placeholder: "type category name here..." %>
              </div>
            </div>
  
            <div class="form-group mt-2 row justify-content-center">
              <%= form.submit(class: "btn btn-outline-light btn-lg w-auto mt-4" )%>
            </div>
          </div>
        </div>
        <% end %>
<% content_for :title, "New User" %>

<h1 class="text-center mt-4">Pedro's Users</h1>

<div class="flickr_pagination">
  <%= will_paginate @users, :container => false %>
</div>

<div class="container">
  <% @users.each do |user| %>
  <div class="row justify-content-md-center">
    <div class="col-6 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header fst-italic">
          <%= link_to user.username, user %>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to gravatar_for(user, size: 150), user %>
          </h5>
          <p class="card-text">
            <%= pluralize(user.articles.count, "article") %>
          </p>
          <div class="d-flex justify-content-center">
            <div class="p-1">
              <%= link_to "View profile", user, class:"btn
              btn-outline-success"%>
            </div>
            <% if logged_in? %>
              <% if user == current_user %>
              <div class="p-1">
                <%= link_to "Edit profile", edit_user_path(user), class:"btn
                btn-outline-info" %>
              </div>
              <% end %>
              <% if current_user.admin? %>
              <div class="p-1">
                <%= button_to "Delete user", user, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this user and all their articles?" }, class: "btn btn-outline-danger" %>
              </div>
              <% end %>
            <% end %>
          </div>
        </div>
        <small> Joined <%= time_ago_in_words(user.created_at) %> ago</small>
      </div>
    </div>
  </div>
  <% end %>
</div>

<div class="flickr_pagination mb-4">
  <%= will_paginate @users, :container => false %>
</div>

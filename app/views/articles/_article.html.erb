<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded" id="<%= dom_id article %>">
        <div class="card-header fst-italic">
          by <%= link_to article.user.username, article.user if article.user %>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= link_to article.title, article, class: "text-success" %>
          </h5>
          <div class="card-text text-start">
            <%= truncate(article.description, length: 100) %>
          </div>
          <div class="d-flex justify-content-center">
            <div class="p-1">
              <%= link_to "View", article, class: "btn btn-outline-success" %>
            </div>
            <div class="p-1">
              <%= link_to "Edit", edit_article_path(article), class: "btn btn-outline-info" %>
            </div>
            <div class="p-1">
              <%= button_to "Delete", article, method: :delete, 
                            data: { turbo_confirm: "Are you sure?" }, 
                            class: "btn btn-outline-danger" %>
            </div>
          </div>
        </div>
        <div class="card-footer text-muted">
          <small>
            Created <%= time_ago_in_words(article.created_at) %> ago, 
            Updated <%= time_ago_in_words(article.updated_at) %> ago
          </small>
        </div>
      </div>
    </div>
  </div>
</div>
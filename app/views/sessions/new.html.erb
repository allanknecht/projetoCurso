<h1 class="text-center mt-4">Log In</h1>

<div class="container">
    <div class="row justify-content-center">
      <div class="col-10">
        <%= form_with(scope: :session, url: login_path, class: "shadow p-3 mb-3 bg-info bg-gradient rounded") do |form| %>
        <div class="row justify-content-center">
          <div class="col-10">

  
            <div class="form-group row mt-2">
              <%= form.label :email, class: "col-2 col-form-label text-light" %>
              <div class="col-10">
                <%= form.email_field :email, class: "form-control shadow rounded",
                placeholder: "Email" %>
              </div>
            </div>
  
            <div class="form-group row mt-2">
              <%= form.label :password, class: "col-2 col-form-label text-light"
              %>
              <div class="col-10">
                <%= form.password_field :password, class: "form-control shadow
                rounded", placeholder: "Password" %>
              </div>
            </div>
  
            <div class="form-group mt-2 row justify-content-center">
              <%= form.submit "Log in", class: "btn btn-outline-light btn-lg w-auto mt-4" %>
            </div>
          </div>
        </div>
        <% end %>
        <div>
          <%= link_to "Back to articles", articles_path, class: "text-info"%>
        </div>
      </div>
    </div>
  </div>
  